#!/usr/bin/env ruby
require "thor"
#require "fileutils"

class Loki < Thor
  desc "add PATH", "add a log line to backup.log in PATH"
  long_desc <<-LONGDESC
    `loki add` will add a log line to backup.log in PATH.
  LONGDESC
  def add(path=nil)
    #add a line to PATH/backup.log
  end

  desc "latest PATH", "print latest backup date for PATH"
  long_desc <<-LONGDESC
    `loki latest` will print out the latest backup date for PATH.
  LONGDESC
  def latest(path=nil)
    puts `tail -1 backup.log`
  end

  desc "today PATH", "print today to PATH"
  long_desc <<-LONGDESC
    `loki today` will print out a boolean value about if backup for PATH has been run today.
  LONGDESC
  def today(path=nil)
    latest(path) #if latest = today return true else false
  end
end

Loki.start(ARGV)
