#!/bin/bash
case $1 in
	-*)
		KR_DIR_TEMP=$(asetus dir:temp)
		TYNNYRI_TTY=$(verkko tty)
		case $1 in
			*0*) tynnyri -l; tynnyri -n $2;;
			*a*) if [ -f $KR_DIR_TEMP/tynnyri/$TYNNYRI_TTY.tynnyri ]; then echo $2 >> $KR_DIR_TEMP/tynnyri/$TYNNYRI_TTY.tynnyri; else tynnyri -n $2; fi;;
			*k*) cat $KR_DIR_TEMP/tynnyri/$TYNNYRI_TTY.tynnyri; tynnyri -0;;
			*l*) if [ -f $KR_DIR_TEMP/tynnyri/$TYNNYRI_TTY.tynnyri ]; then rm $KR_DIR_TEMP/tynnyri/$TYNNYRI_TTY.tynnyri; fi;;
			*n)
					if [ -d $KR_DIR_TEMP/tynnyri/ ]; then
						echo $2 > $KR_DIR_TEMP/tynnyri/$TYNNYRI_TTY.tynnyri
					else
						cd $KR_DIR_TEMP/; pwd; mkdir tynnyri
						echo $2 > $KR_DIR_TEMP/tynnyri/$TYNNYRI_TTY.tynnyri
					fi;;
			*p*) cat $KR_DIR_TEMP/tynnyri/$TYNNYRI_TTY.tynnyri;;
			*u*|*d*) echo $2 >> $KR_DIR_TEMP/tynnyri/$TYNNYRI_TTY.tynnyri; tynnyri -k;;
		esac;;
	a|add) tynnyri -a $2;;
	d) tynnyri -u $2;;
	del) tynnyri -l;;
	k) tynnyri -k;;
	dump) tynnyri -u $2;;
	kick) tynnyri -k;;
	new) tynnyri -n $2;;
	pr) tynnyri -p;;
	*) tynnyri -a $1;;
esac
