#!/bin/bash
case $1 in
	-*)
		DIR_TEMP=$(asetus dir:temp); TYNNYRI=$(verkko tty); DIR_TTY=$DIR_TEMP #/$TYNNYRI_TTY
		case $1 in
			*0*) tynnyri -l; tynnyri -n $2;;
			*a*) if [ -f $DIR_TEMP/$TYNNYRI.tynnyri ]; then echo $2 >> $DIR_TEMP/$TYNNYRI.tynnyri; else tynnyri -n $2; fi;;
			*k*) tynnyri -p; tynnyri -l;;
			*l*) if [ -f $DIR_TEMP/$TYNNYRI.tynnyri ]; then rm $DIR_TEMP/$TYNNYRI.tynnyri; fi;;
			*n)
					if [ -d $DIR_TTY/ ]; then
						echo $2 > $DIR_TEMP/$TYNNYRI.tynnyri
					else
						#cd $DIR_TEMP/; pwd; mkdir tynnyri
						echo $2 > $DIR_TEMP/$TYNNYRI.tynnyri
					fi;;
			*p*) echo $(cat $DIR_TEMP/$TYNNYRI.tynnyri|tr "\n" ",");;
			*u*|*d*) echo $2 >> $DIR_TTY/tynnyri.check; tynnyri -k;;
		esac;;
	a|add) tynnyri -a $2;;
	d) tynnyri -u $2;;
	del) tynnyri -l;;
	k) tynnyri -k;;
	dump) tynnyri -u $2;;
	kick) tynnyri -k;;
	new) tynnyri -n $2;;
	pr) tynnyri -p;;
	*) tynnyri -a $1;;
esac
