#!/bin/bash
case $1 in
	-*)
		KR_DIR_TEMP=$(asetus dir:temp)
		TYNNYRI_TTY=$(verkko tty)
		case $1 in
			*0*) tynnyri -l; tynnyri -n $2;;
			*a*) if [ -f $KR_DIR_TEMP/tynnyri/$TYNNYRI_TTY ]; then echo $2 >> $KR_DIR_TEMP/tynnyri/$TYNNYRI_TTY; else tynnyri -n $2; fi;;
			*k*) cat $KR_DIR_TEMP/tynnyri/$TYNNYRI_TTY; tynnyri -0;;
			*l*) if [ -f $KR_DIR_TEMP/tynnyri/$TYNNYRI_TTY ]; then rm $KR_DIR_TEMP/tynnyri/$TYNNYRI_TTY; fi;;
			*n)
					if [ -d $KR_DIR_TEMP/tynnyri/ ]; then
						if [ -f $KR_DIR_TEMP/tynnyri/$TYNNYRI_TTY ]; then echo $2 > $KR_DIR_TEMP/tynnyri/$TYNNYRI_TTY; fi
					else
						cd $KR_DIR_TEMP/
						mkdir tynnyri 
					fi;;
			*p*) cat $KR_DIR_TEMP/tynnyri/$TYNNYRI_TTY;;
			*u*|*d*) echo $2 >> $KR_DIR_TEMP/tynnyri/$TYNNYRI_TTY; tynnyri -k;;
		esac;;
	a|add) tynnyri -a $2;;
	d) tynnyri -u $2;;
	del) tynnyri -l;;
	k) tynnyri -k;;
	dump) tynnyri -u $2;;
	kick) tynnyri -k;;
	new) tynnyri -n $2;;
	pr) tynnyri -p;;
	*) tynnyri -a $1;;
esac
