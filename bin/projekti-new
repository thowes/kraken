#!/usr/bin/env ruby
# frozen_string_literal: true

require 'thor'
# require 'fileutils'

# PROJEKTI class: list projects and their directories.
class Projekti < Thor
  default_task :tila

  desc 'go', 'go to the project directory.'
  def go
    #
  end

  def tila; status; end
  private

  def status
    status = "$(git status | \grep 'On branch')"
    puts status_message if status_message.include?('master')
  end

end

Projekti.start(ARGV)
