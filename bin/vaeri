#!/bin/bash
MODE=def; COLOR_NAME=zero; COLOR=e[0m; NORMAL="\e[0m";
if [ -z "$1" ]; then nada; else case $1 in
	-c) FUNC=clr; COLOR_NAME=$2;;
	-d) MODE=dark; FUNC=clr; COLOR_NAME=$2;;
	-l) MODE=light; FUNC=clr; COLOR_NAME=$2;;
	-n) FUNC=num; COLOR_NAME=$2;;
	-t) FUNC=tst; COLOR_NAME=$2;;
	*) FUNC=clr; COLOR_NAME=$1;;
esac; fi

case $MODE in
	*)
case $COLOR_NAME in
	black) COLOR=30m;;
	blue) COLOR=34m;;
	green) COLOR=32m;;
	purple) COLOR=35m;;
	red) COLOR=31m;;
esac;;
esac

if [ "true" == "true" ]; then
	LBLUE=94m
	CYAN=36m
	LCYAN=96m
	GREY=grey
	DGREY=90m
	LGREY=37m
	LGREEN=92m
	LIME=lime
	MAGENTA=35m
	LMAGENTA=95m
	LRED=91m
	WHITE=97m
	YELLOW=33m
	LYELLOW=93m
fi

colors_test() {
	tyn $BURGUNDY
	tyn $CELESTE
	tyn $CYAN
	tyn $GREY; tyn $DARKGREY; tyn $LIGHTGREY
	tyn $IVORY
	tyn $LIME
	tyn $MAGENTA
	tyn $NAVY
	tyn $ORANGE
	tyn $PINK
	tyn $WHITE
	tyn $YELLOW
}

case $FUNC in
	tst) START="\e[$COLOR"; printf "$START%b$NORMAL" "$COLOR $COLOR_NAME"; printf " ($COLOR $COLOR_NAME)\n";;
	*) printf "$COLOR\n";;
esac

