#!/bin/bash
MODE=def; COLOR_NAME=zero; COLOR=e[0m; NORMAL="\e[0m";
if [ -z "$1" ]; then nada; else case $1 in
	-c) FUNC=clr; COLOR_NAME=$2;;
	-d) MODE=D; FUNC=tst; COLOR_NAME=$2;;
	-l) MODE=L; FUNC=tst; COLOR_NAME=$2;;
	-n) FUNC=num; COLOR_NAME=$2;;
	-t) FUNC=tst; COLOR_NAME=$2;;
	*) FUNC=clr; COLOR_NAME=$1;;
esac; fi

case $MODE in
	D) case $COLOR_NAME in
			blue) COLOR=34m;;	
			gray) COLOR="1;30m";;
			green) COLOR=32m;;
			grey) COLOR="1;30m";;
			purple|magenta) COLOR="35m";;
			red) COLOR=31m;;
			yellow) COLOR="33m";;
		esac;;
	L) case $COLOR_NAME in
			blue) COLOR="1;34m";;	
			gray) COLOR="37m";;
			green) COLOR="1;32m";;
			grey) COLOR="37m";;
			magenta|purple) COLOR="1;35m";;
			red) COLOR="1;31m";;
			yellow) COLOR="1;33m";;
		esac;;
	*) case $COLOR_NAME in
			black) COLOR=30m;;
			blue) COLOR=34m;;
			b*red) COLOR="1;31m";;
			burgundy) COLOR=31m;;
			celeste) COLOR="1;34m";;
			crimson) COLOR="1;31m";;
			d*blue) COLOR=34m;;
			d*gray) COLOR="1;30m";;
			d*grey) COLOR="1;30m";;
			d*yellow) COLOR=33m;;
			gray) COLOR=37m;;
			green) COLOR=32m;;
			grey) COLOR=37m;;
			ivory) COLOR=37m;;
			l*blue) COLOR="1;34m";;
			l*gray|l*grey) COLOR="37m";;
			lime|l*green) COLOR="1;32m";;
			l*yellow) COLOR="1;33m";;
			magenta) COLOR="1;35m";;
			navy) COLOR=34m;;
			purple) COLOR=35m;;
			red) COLOR=31m;;
			white) COLOR="1;37m";;
			yellow) COLOR="1;33m";;
		esac;;
esac

if [ "true" == "true" ]; then
	CYAN=36m
	LCYAN=96m
fi

colors_test() {
	tyn $CYAN
}

case $FUNC in
	tst) START="\e[$COLOR"; printf "$START%b$NORMAL" "$COLOR $COLOR_NAME"; printf " ($COLOR $COLOR_NAME)\n";;
	*) printf "$COLOR\n";;
esac

