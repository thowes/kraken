#!/usr/bin/env ruby

require 'fileutils'
# require 'optparse'

# def varko(path = nil)
begin
  dir = options[:dir] || dir
  filename = options[:filename] || filename
  FileUtils.cd(dir) unless dir.nil?
  log_old = system("loki latest --path #{dir}")
  unless log_old.include?(Today) # check formatting for today 
    summa = system("summa #{asetus dir:buc}/#{filename}.7z")
    if !log_old.include?(summa)
      system("loki add --path #{dir} #{filename} $SUMMA")
      system("tynnyri #{filename}")
    end
  end
rescue File::Error => e
  puts e.message
end
