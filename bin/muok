#!/bin/bash
EDITOR='nano -w -T 2'

case $2 in
	em) EDITOR=emacs;;
	emacs) EDITOR=emacs;;
	n) EDITOR=nano;;
esac

case $1 in
	ab) $EDITOR ~/.addressbook;;
	al) $EDITOR ~/Projects/kraken/cfg/alias.sh;;
	brc) $EDITOR ~/.bashrc;;
	bp) $EDITOR ~/.bash_profile;;
	cfg) $EDITOR ~/Projects/kraken/cfg/kraken.cfg;;
	gpg) $EDITOR ~/.gnupg/gpg.conf;;
	p) $EDITOR ~/.profile;;
	proj) $EDITOR ~/Projects/kraken/cfg/proj.csv;;
	vk) $EDITOR ~/Projects/kraken/cfg/vker.sh;;
	*) echo "[[ MUOK err: argument not known. ]]";;
esac
