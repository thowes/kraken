#!/bin/sh
EDITOR='nano -w -T 2'

case $2 in
	em) EDITOR=emacs;;
	emacs) EDITOR=emacs;;
	n) EDITOR=nano;;
esac

case $1 in
	ab) $EDITOR ~/.addressbook;;
	al) $EDITOR ~/Projects/config/alias.sh;;
	brc) $EDITOR ~/.bashrc;;
	bp) $EDITOR ~/.bash_profile;;
	cfg) $EDITOR ~/Projects/config/kraken.cfg;;
	gpg) $EDITOR ~/.gnupg/gpg.conf;;
	p) $EDITOR ~/.profile;;
	proj) $EDITOR ~/Projects/config/proj.csv;;
	vk) $EDITOR ~/Projects/config/vker.sh;;
	*) printf "[[ MUOK err: argument not known. ]]\n";;
esac
