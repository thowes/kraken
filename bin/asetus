#!/bin/sh

if [ -f $1/kraken.cfg ]; then
	ASETUKSET_REQUEST=$2
	. $1/kraken.cfg
else
	if [ -f $1 ]; then
		ASETUKSET_REQUEST=$2
		. $1
	else
		ASETUKSET_REQUEST=$1
		if [ -f ~/Projects/config/$HOSTNAME/kraken.cfg ]; then
			. ~/Projects/config/$HOSTNAME/kraken.cfg
		else
			if [ -f ~/Projects/config/kraken.cfg ]; then
				. ~/Projects/config/kraken.cfg
			else
				if [ -f ~/Projects/kraken/cfg/kraken.cfg ]; then
					. ~/Projects/kraken/cfg/kraken.cfg
				fi
			fi
		fi
	fi
fi

case $ASETUKSET_REQUEST in
	bool:backups) echo $KR_BACKUPS;;
	bool:debug) echo $KR_DEBUG;;
	bool:hosted) echo $KR_HOSTED;;
	bool:wireless) echo $KR_WIRELESS;;
	dir:amenu) echo $KR_DIR_AMENU;;
	dir:buc) echo $KR_DIR_BUC;;
	dir:bua) echo $KR_DIR_BUA;;
	dir:cfg) echo $KR_DIR_CFG;;
	dir:cmenu) echo $KR_DIR_CMENU;;
	dir:d*t*) echo $KR_DIR_DT;;
	dir:excl) echo $KR_DIR_EXCL;;
	dir:incl) echo $KR_DIR_INCL;;
	dir:keys) echo $KR_DIR_KEYS;;
	dir:lib) echo $KR_DIR_LIB;;
	dir:lnk) echo $KR_DIR_LNK;;
	dir:logs) echo $KR_DIR_LOGS;;
	dir:pmenu) echo $KR_DIR_PMENU;;
	dir:sendto) echo $KR_DIR_SENDTO;;
	dir:startup) echo $KR_DIR_STARTUP;;
	dir:temp) echo $KR_DIR_TEMP;;
	dir:tmpl) echo $KR_DIR_TMPL;;
	dir:umenu) echo $KR_DIR_UMENU;;
	str:lnk) echo $KR_NAME_LNK;;
	str:network) echo $KR_NETWORK;;
	str:recipient) echo $KR_RECIPIENT;;
	str:startup) echo $KR_NAME_STARTUP;;
	str:url) echo $KR_NAME_URL;;
	url:ext) echo $KRN_EXT_IP_ADDRESS;;
esac
