#!/bin/sh
if [ -f $1/kraken.cfg ]; then
	ASETUKSET_REQUEST=$2
	. $1/kraken.cfg
else
	if [ -f $1 ]; then
		ASETUKSET_REQUEST=$2
		. $1
	else
		ASETUKSET_REQUEST=$1
		if [ -f ~/Projects/config/$HOSTNAME/kraken.cfg ]; then
			. ~/Projects/config/$HOSTNAME/kraken.cfg
		else
			if [ -f ~/Projects/config/kraken.cfg ]; then
				. ~/Projects/config/kraken.cfg
			else
				if [ -f ~/Projects/kraken/cfg/kraken.cfg ]; then
					. ~/Projects/kraken/cfg/kraken.cfg
				fi
			fi
		fi
	fi
fi

case $ASETUKSET_REQUEST in
	b*:b*u*) echo $KR_BACKUPS;;
	b*:debug) echo $KR_DEBUG;;
	b*:hosted) echo $KR_HOSTED;;
	b*:wireless) echo $KR_WIRELESS;;
	d*:amenu) echo $KR_DIR_AMENU;;
	d*:buc) echo $KR_DIR_BUC;;
	d*:bua) echo $KR_DIR_BUA;;
	d*:c*f*g) echo $KR_DIR_CFG;;
	d*:cmenu) echo $KR_DIR_CMENU;;
	d*:d*t*) echo $KR_DIR_DT;;
	d*:excl*) echo $KR_DIR_EXCL;;
	d*:incl*) echo $KR_DIR_INCL;;
	d*:key*) echo $KR_DIR_KEYS;;
	d*:lib) echo $KR_DIR_LIB;;
	d*:lnk) echo $KR_DIR_LNK;;
	d*:log*) echo $KR_DIR_LOGS;;
	d*:pmenu) echo $KR_DIR_PMENU;;
	d*:s*to) echo $KR_DIR_SENDTO;;
	d*:s*up) echo $KR_DIR_STARTUP;;
	d*:temp) echo $KR_DIR_TEMP;;
	d*:tmpl) echo $KR_DIR_TMPL;;
	d*:umenu) echo $KR_DIR_UMENU;;
	s*:lnk) echo $KR_NAME_LNK;;
	s*:network) echo $KR_NETWORK;;
	s*:recipient) echo $KR_RECIPIENT;;
	s*:startup) echo $KR_NAME_STARTUP;;
	s*:url) echo $KR_NAME_URL;;
	u*:ext) echo $KRN_EXT_IP_ADDRESS;;
esac
