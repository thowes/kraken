#!/bin/sh
kanta_params() {
	case $1 in
		-*) case $1 in
				*a:*) FUNCTION=add; TABLE=$(echo $1|awk -F\: '{print $2}');;
				*cf*:*) CFG=$(echo $1|awk -F\: '{print $2}');;
				*cr:*) FUNCTION=create; TABLE=$(echo $1|awk -F\: '{print $2}');;
				*db:*) DB=$(echo $1|awk -F\: '{print $2}');;
				*del:*) FUNCTION=remove;;
				*f:*) FUNCTION=search; TABLE=$(echo $1|awk -F\: '{print $2}');;
				*g:*) FUNCTION=create; TABLE=$(echo $1|awk -F\: '{print $2}');;
				*i:*) FUNCTION=add; TABLE=$(echo $1|awk -F\: '{print $2}');;
				*l:*) FUNCTION=search; TABLE=$(echo $1|awk -F\: '{print $2}');;
				*n:*) FUNCTION=count; TABLE=$(echo $1|awk -F\: '{print $2}');;
				*s:*) FUNCTION=search; TABLE=$(echo $1|awk -F\: '{print $2}');;
				*st*) FUNCTION=status; FILTER=$(echo $1|awk -F\: '{print $2}');;
				*t:*) TABLE=$(echo "$1"|awk -F\: '{print $2}');;
				*u) FUNCTION=update;;
				*x) FUNCTION=status; FILTER=INDEX;;
			esac;;
		*) SEARCH=$1;;
	esac
}

if [ "_$1_" != "__" ]; then
	FUNCTION=search; kanta_params "$(echo $1|tr ";" ":")"
	if [ "_$2_" != "__" ]; then
		kanta_params "$(echo $2|tr ";" " ")"
		if [ "_$3_" != "__" ]; then kanta_params "$(echo $3|tr ";" " ")"; fi
	fi
else
	FUNCTION=status
fi

if [ "_$(echo $DB)_" != "__" ]; then
	case $FUNCTION in
		add) sqlite3 $DB "INSERT INTO $TABLE values($SEARCH);";;
		count) sqlite3 $DB "SELECT Count(*) FROM $TABLE;";;
		create) sqlite3 $DB "CREATE TABLE $TABLE ($SEARCH);";;
		remove) echo sqlite $DB delete "(where $KANTA_REMOVE)";;
		search) if [ "_$(echo $SEARCH)_" != "__" ]; then sqlite3 $DB "SELECT * FROM $TABLE;"|grep $SEARCH; else sqlite3 $DB "SELECT * FROM $TABLE;"; fi;;
		status) if [ "_$(echo $FILTER)_" != "__" ]; then sqlite3 $DB .schema|grep $FILTER; else sqlite3 $DB .schema; fi;;
		update) echo sqlite $DB edit;;
	esac
else
	virhe DB $DB not defined
fi
