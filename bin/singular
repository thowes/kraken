#!/usr/bin/env ruby
# frozen_string_literal: true

require 'thor'
#require 'fileutils'

# single line text editor for the command line. work in progress
ARGV.each do|file|
  if File.exist? file
	puts "file: #{file}"
  end
end
class Singular < Thor
  default_task :edit

  desc 'edit', 'edit text file.'
  def edit(filename)
    puts "Whats a content?"
    content = $stdin.readline
    puts "#{filename}: " + content
  end

end
Singular.start(ARGV)
