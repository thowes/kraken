#!/usr/bin/env ruby
# frozen_string_literal: true

require 'thor'
#require 'fileutils'

# single line text editor for the command line. work in progress
ARGV.each do|filename|
    puts "Whats a content?"
  if File.exist? filename
    content = File.read(filename)
	elsif
    content = $stdin.readline
  end
  puts "#{filename}: " + content
end
