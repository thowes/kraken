#!/usr/bin/env ruby
# frozen_string_literal: true

require 'thor'
#require 'fileutils'

ARGV.each do|file|
	puts "file: #{file}"
end
# single line text editor for the command line. work in progress
class Singular < Thor
  default_task :edit

	desc 'edit', 'edit text file.'
  def edit(filename)
    puts "Whats a content?"
    content = $stdin.readline
    puts "#{filename}: " + content
  end

end

Singular.start(ARGV)
