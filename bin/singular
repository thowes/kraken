#!/usr/bin/env ruby
# frozen_string_literal: true

require 'thor'

# single line text editor for the command line. work in progress
class Singular < Thor
  default_task :edit

	desc 'def', 'is the default command.'
	def edit(filename)
		puts "Whats a name?"
		name = $stdin.readline
		puts "name is " + name
	end

end

Singular.start(ARGV)
